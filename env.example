# API Keys
GOOGLE_CALENDAR_CREDENTIALS_FILE=client_secret.json
GOOGLE_CALENDAR_IDS=primary
AFFINITY_API_KEY=<your_affinity_api_key>
OPENAI_API_KEY=<your_openai_api_key>
NEWS_API_KEY=<your_news_api_key>
GMAIL_CREDENTIALS_FILE=client_secret.json

# Database
DATABASE_URL=sqlite:///morning_brief.db

# Redis
REDIS_URL=redis://localhost:6379

# App Settings
DEFAULT_DELIVERY_TIME=08:00
TIMEZONE=America/New_York
ENVIRONMENT=development

# Optional: Custom settings
MAX_NEWS_ARTICLES_PER_PERSON=3
BRIEF_SUMMARY_LENGTH=500 

# Filters
# Require at least one attendee who is not the calendar owner
FILTER_REQUIRE_NON_OWNER_ATTENDEE=true
# Only include meetings with at least one external domain attendee
FILTER_EXTERNAL_ONLY=true
# Exclude recurring meetings
FILTER_EXCLUDE_RECURRING=true

# Personalization
# Treat these domains as internal; used for filtering and attendee display
INTERNAL_DOMAINS=blackhornvc.com
# Limit brief to upcoming N hours when generating for today (0 disables)
TIME_WINDOW_HOURS=0
# Email theme colors
THEME_ACCENT=#6366f1
THEME_ACCENT2=#a855f7

# Content intelligence
ENABLE_TALKING_POINTS=true
TALKING_POINTS_USE_LLM=false
TALKING_POINTS_MAX=2